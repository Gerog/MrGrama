<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.smileCrew.MrGrama"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.smileCrew.MrGrama.MrGrama"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.smileCrew.MrGrama.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="MrGrama" >
        </activity>
        <activity
            android:name="de.smileCrew.MrGrama.Vocabulary"
            android:label="@string/title_activity_vocabulary"
            android:parentActivityName="MrGrama" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MrGrama" />
        </activity>
        <activity
            android:name="de.smileCrew.MrGrama.VocTitle"
            android:label="@string/title_activity_voc_title"
            android:theme="@android:style/Theme.Holo.Dialog"
            android:parentActivityName="Vocabulary" >
        </activity>
        <activity
            android:name="de.smileCrew.MrGrama.VocPhrases"
            android:label="@string/title_activity_voc_phrases"
            android:parentActivityName="Vocabulary" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="Vocabulary" />
        </activity>
    </application>

</manifest>
